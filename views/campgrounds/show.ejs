<%- include("../partials/header") %>
<br>
 <div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				CampToday
			</p>
		<div>
				
		</div>
		  <a class="btn btn-sm btn-success" href="/campgrounds">Go Back</a>
		 </div>
		
		<div class="col-md-9">
        <div class="card mb-3" >
 			 <img src="<%=campgrounds.image %>" class="card-img-top" alt="...">
  			 <div class="card-body">
    		 <h5 class="card-title float-left"><a> <%= campgrounds.name%></a></h5>
	  		 <p class="float-right">
						$<%=campgrounds.price%>/night
			</p>
				 <div class="clearfix">
					 
				 </div>
				  <p>
					  <em> submiited by <a href = "/users/<%= campgrounds.author.id %>"><%= campgrounds.author.username %></a>, <%= moment(campgrounds.createdAt).fromNow() %></em>
			     </p>
				 
				 <!--LIKES BUTTON -->
				 <div class="pull-right">
                        <button type="button" class="btn btn-xs btn-primary" data-toggle="modal"
                                data-target="#campgroundLikes">
                            <span>Total likes: <i class="fas fa-thumbs-up"></i> <%= campgrounds.likes.length %></span>
                        </button>
                    </div>
                    <div style="padding-bottom: 10px;">
                        <form action="/campgrounds/<%= campgrounds._id %>/like" method="POST">
                            <div class="btn-group">
                                <% if (currentUser && campgrounds.likes.some(function (like) {
                                    return like.equals(currentUser._id)
                                })) { %>
                                <button class="btn btn-sm btn-primary">
                                    <i class="fas fa-thumbs-up"></i> Liked (<%= campgrounds.likes.length %>)
                                </button>
                                <% } else { %>
                                <button class="btn btn-sm btn-secondary">
                                    <i class="fas fa-thumbs-up"></i> Like (<%= campgrounds.likes.length %>)
                                </button>
                                <% } %>
                                <button type="button" class="btn btn-sm btn-default" data-toggle="modal"
                                        data-target="#campgroundLikes">See more details
                                </button>
                            </div>
                        </form>
                    </div>
				 <p class="card-text"><%= campgrounds.description%></p>
	  		 
             
    	          <% if(currentUser && (campgrounds.author.id.equals(currentUser._id) || currentUser.isAdmin)) { %>
					<button class="btn btn-sm btn-warning">
				        <a id="Edit-Button" href="/campgrounds/<%=campgrounds._id %>/edit" >Edit</a>
					</button>
					<form id="delete-form" action="/campgrounds/<%=campgrounds._id %>?_method=delete" method="POST">
						<button  class="btn btn-sm btn-danger">
							Delete
						</button>
					</form>
					<% } %>
       </div>
    </div>			
			
			
		   <!--Review section-->
            <div class="thumbnail">
                <div class="caption-full">
                    <% if (campgrounds.rating === 0) { %>
                    <h5>
                        <em>No reviews yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star <% if (campgrounds.rating > 1.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campgrounds.rating > 2.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campgrounds.rating > 3.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (campgrounds.rating > 4.5) { %> checked <% } %>"></span>
                        <em>(total reviews: <%= campgrounds.reviews.length %>)</em>
                    </p>
                    <p>
                        Current campground rating: <strong><%= campgrounds.rating.toFixed(2) %></strong>
                    </p>
                    <p><h4>Latest reviews for this campground:</h4>
                    <hr style="margin-top: 0;">
                    <% campgrounds.reviews.slice(0, 5).forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                            <div>Review by: <strong><%= review.author.username %></strong></div>
                            <span><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                            </p>
                            <% if(currentUser && (review.author.id.equals(currentUser._id)) || currentUser.isAdmin){ %>
                            <a class="btn btn-xs btn-warning"
                               href="/campgrounds/<%=campgrounds._id %>/reviews/<%=review._id %>/edit">Edit</a>
                            <form id="delete-form" action="/campgrounds/<%=campgrounds._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <div style="margin-bottom: 10px;">
                        <h4><a href="/campgrounds/<%= campgrounds._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i> See all reviews</a></h4>
                    </div>
                    <% } %>
                    <div>
                        <a class="btn btn-primary btn-lg <% if (currentUser && campgrounds.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/campgrounds/<%= campgrounds._id %>/reviews/new">
                            Write a new review</a>
                    </div>
                </div>
            </div>

			
			<div class="comment-card-mb-3" text-align = "center">
				<div class="card-header">
					<a  class="btn  btn-success float-right " href="/campgrounds/<%= campgrounds._id%>/comments/new">
						Add New Comments
					</a>
					<hr>
				</div>
				
			<div class="comment-card-body" text-align= "center">
				<% campgrounds.comments.forEach(function(comment){ %>
				<div class="row card-body" text-align = "center">
					<div class="col-md-12">
						<strong class="card-title"><%= comment.author.username %></strong>
						<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
				     	<p class="card-text">
			                <%= comment.text %>
			            </p>
						<%	if(currentUser && comment.author.id.equals(currentUser._id)) { %>
						<a class="btn btn-sm btn-warning" href="/campgrounds/<%= campgrounds._id%>/comments/<%= comment._id%>/edit">Edit</a>
						<form id="delete-comment" action="/campgrounds/<%= campgrounds._id%>/comments/<%= comment._id%>?_method=DELETE" method="POST">
							<button class="btn btn-sm btn-danger">
								DELETE
							</button>
							<%	} %>
						</form>
					</div>
				</div>
			    <hr>		
	<% });%>
					</div>
			</div>
		</div>
	</div>
</div>




<!-- Campground Likes Modal -->
<div id="campgroundLikes" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Campground likes: <%= campgrounds.likes.length %></h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Liked by:</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% campgrounds.likes.forEach(function(like) { %>
                        <tr>
                            <td><span class="badge"><i class="fas fa-user"></i></span> <%= like.username %></td>
                        </tr>
                    <% }); %>
                    <% if (campgrounds.likes.length === 0) { %>
                        <tr>
                            <td><em>No likes yet.</em></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>